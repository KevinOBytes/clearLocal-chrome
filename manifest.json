{
  "manifest_version": 3,
  "name": "Clear Local Storage",
  "version": "1.0",
  "description": "Clear local storage, cookies, and session storage for the current tab",
  "permissions": [
    "activeTab",
    "storage",
    "cookies",
    "contextMenus",
    "scripting",
    "browsingData"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 